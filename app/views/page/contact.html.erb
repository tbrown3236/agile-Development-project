
<div class="wrapper">
  <div class="row content-wrapper">
    <div class="columns large-12">
      <div class="row">
        <div class="columns large-12 content ">
          <h1 class="page-title">Contact Us</h1>
          <div>
            <h2 class="sub-title">You can reach CollegeRides.com Customer Service from 8:00am to 6:00pm (Pacific Time) every weekday by submitting the form below!</h2>
          </div>

          <div class="row contact-form">
            <div class="columns large-8">

              <!--<form id="contact-form" method="post" action="#">
              <input type="text" name="name" placeholder="Name:">
              <input type="text" name="email" placeholder="Email:">
              <input type="text" name="subject" placeholder="Subject:">
              <textarea  name="message" placeholder="Message:"></textarea>
              <input type="submit" class="button" name="submit" value="send">
              </form>-->

              <%= form_tag do %>
                <%= text_field_tag 'name', @name, placeholder: 'Name:' %>
                <%= text_field_tag 'email', @email, placeholder: 'Email:' %>
                <%= text_field_tag 'subject', @subject, placeholder: 'Subject:' %>
                <%= text_area_tag 'message', @message, placeholder: 'Message'  %>
                <%= submit_tag 'Submit', class: 'contactTextBox' %>
              <% end %>


            </div>
            <div class="columns large-4">
              <div id="map_canvas"></div>
              <ul class="vcard">
                <li class="fn">FANTASTIC 5</li>
                <li class="street-address">255, Willson Street,Caulfield</li>
                <li class="locality">U.S.A</li>
                <li><span class="state">Washington</span>, <span class="zip">99212</span></li>
                <li class="email"><span>Email:</span>needarideWebmaster@gmail.com</li>
                <li class="telephone"><span>Tel:</span>(509)3456789, (509)3456079, (509)2341234</li>
                <li class="fax"><span>Tel:</span>1800-726-1924</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="row collapse">
          <div class="columns large-12"> </div>
        </div>
      </div>
    </div>
  </div>
</div>
