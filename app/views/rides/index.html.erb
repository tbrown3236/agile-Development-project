<p id="notice"><%= notice %></p>

<h1>Listing Rides</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Starting location</th>
      <th>Ending location</th>
      <th>Departure date</th>
      <th>Return date</th>
      <th>Available seats</th>
      <th>Estimated cost</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.author %></td>
        <td><%= ride.starting_location %></td>
        <td><%= ride.ending_location %></td>
        <td><%= ride.departure_date %></td>
        <td><%= ride.return_date %></td>
        <td><%= ride.available_seats %></td>
        <td><%= ride.estimated_cost %></td>
        <td><%= ride.details %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

