<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Age</th>
      <th>Email</th>
      <th>Major</th>
      <th>Gender</th>
      <th>Schoolname</th>
      <th>Smoke</th>
      <th>Pet</th>
      <th>Drive</th>
      <th>Bio</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.fullname %></td>
        <td><%= profile.age %></td>
        <td><%= profile.email %></td>
        <td><%= profile.major %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.schoolName %></td>
        <td><%= profile.smoke %></td>
        <td><%= profile.pet %></td>
        <td><%= profile.drive %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.avatar %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

